		"svelte-check": "^4.1.0",
		"tailwindcss": "^3.4.15",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.16.0",
		"vite": "^6.0.0",
		"vitest": "^2.1.6"
	},
	"type": "module",
	"dependencies": {
		"@bufbuild/protobuf": "^1.10.0",
		"@connectrpc/connect": "^1.6.1",
